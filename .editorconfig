# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{js,jsx,ts,tsx,svelte}]
indent_style = space
indent_size = 2

# 4 space indentation for HTML, CSS, SCSS, HTML
[*.{html,css,scss,md}]
indent_style = space
indent_size = 4
